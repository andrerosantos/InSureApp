<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ulisboa.tecnico.sise.autoinsure">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="pt.ulisboa.tecnico.sise.autoinsure.app.GlobalState"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="pt.ulisboa.tecnico.sise.autoinsure.app.activities.ListClaimActivity" />
        <activity android:name="pt.ulisboa.tecnico.sise.autoinsure.app.activities.CustomerInformationActivity" />
        <activity android:name="pt.ulisboa.tecnico.sise.autoinsure.app.activities.ClaimInformationActivity" />
        <activity android:name="pt.ulisboa.tecnico.sise.autoinsure.app.activities.NewClaimActivity" />
        <activity android:name="pt.ulisboa.tecnico.sise.autoinsure.app.activities.MenuActivity" />
        <activity android:name="pt.ulisboa.tecnico.sise.autoinsure.app.activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>